{
  "root": true,
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "plugins": ["flowtype", "babel", "react"],
  "globals": {
    "$ReadOnly": true,
    "$ReadOnlyArray": true,
    "$Exact": true
  },
  "rules": {
    "no-console": "error",
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "ignoreRestSiblings": true
      }
    ],
    "object-shorthand": "error"
  }
}
